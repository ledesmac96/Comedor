<?xml version="1.0" encoding="utf-8"?>
<androidx.core.widget.NestedScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <include layout="@layout/toolbar_trans" />

        <ProgressBar
            android:layout_marginTop="20dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/progress_bar" />

        <LinearLayout
            android:id="@+id/latDatos"
            android:orientation="vertical"
            android:layout_margin="10dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <TextView
                android:padding="10dp"
                android:layout_marginTop="5dp"
                android:gravity="center"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textStyle="bold"
                android:textSize="18sp"
                android:fontFamily="@font/montserrat_black"
                android:text="Reporte de asistencia del mes" />

            <TextView
                android:id="@+id/txtMes"
                android:layout_width="match_parent"
                android:text="07/07/20"
                android:gravity="center"
                android:textColor="@color/colorAccent"
                android:textSize="22sp"
                android:textStyle="bold"
                android:fontFamily="@font/montserrat_black"
                android:layout_height="wrap_content" />

            <TextView
                android:padding="10dp"
                android:layout_marginTop="5dp"
                android:gravity="center"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textStyle="bold"
                android:textSize="18sp"
                android:fontFamily="@font/montserrat_black"
                android:text="Total de porciones entregadas" />

            <TextView
                android:id="@+id/txtTotalPorciones"
                android:layout_width="match_parent"
                android:text="0"
                android:gravity="center"
                android:textColor="@color/colorAccent"
                android:textSize="22sp"
                android:textStyle="bold"
                android:fontFamily="@font/montserrat_black"
                android:layout_height="wrap_content" />

            <LinearLayout
                android:orientation="vertical"
                android:layout_marginTop="10dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <LinearLayout
                    android:layout_marginTop="10dp"
                    android:orientation="vertical"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">

                    <androidx.cardview.widget.CardView
                        style="@style/CardView"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_margin="3dp"
                        app:cardCornerRadius="10dp">

                        <LinearLayout
                            android:orientation="vertical"
                            android:gravity="center"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content">

                            <TextView
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:text="TOTAL DE RESERVAS"
                                android:gravity="center"
                                android:background="@color/colorAccent"
                                android:textColor="@color/colorWhite"
                                android:padding="5dp"
                                android:textStyle="bold"
                                android:fontFamily="@font/montserrat_black"
                                android:textSize="20sp"/>

                            <TextView
                                android:layout_marginTop="5dp"
                                android:id="@+id/txtTotalReservas"
                                android:layout_width="match_parent"
                                android:text="0"
                                android:gravity="center"
                                android:textColor="@color/colorAccent"
                                android:textSize="22sp"
                                android:textStyle="bold"
                                android:fontFamily="@font/montserrat_black"
                                android:layout_height="wrap_content" />

                            <LinearLayout
                                android:orientation="vertical"
                                android:id="@+id/cardReservas"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content">

                                <com.github.mikephil.charting.charts.BarChart
                                    android:id="@+id/barMeses"
                                    android:layout_width="match_parent"
                                    android:layout_marginBottom="10dp"
                                    android:layout_height="300dp">
                                </com.github.mikephil.charting.charts.BarChart>

                                <LinearLayout
                                    android:layout_marginBottom="10dp"
                                    android:gravity="center"
                                    android:layout_gravity="center"
                                    android:orientation="vertical"
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content">

                                    <LinearLayout
                                        android:gravity="center"
                                        android:orientation="horizontal"
                                        android:layout_width="match_parent"
                                        android:layout_height="wrap_content">

                                        <LinearLayout
                                            android:layout_gravity="center"
                                            android:gravity="start"
                                            android:layout_width="wrap_content"
                                            android:layout_height="wrap_content"
                                            android:orientation="horizontal">

                                            <View
                                                android:layout_gravity="center"
                                                android:layout_width="10dp"
                                                android:layout_height="10dp"
                                                android:background="@color/colorLightBlue" />

                                            <TextView
                                                android:textSize="12sp"
                                                android:layout_width="wrap_content"
                                                android:layout_height="wrap_content"
                                                android:layout_marginStart="5dp"
                                                android:fontFamily="@font/montserrat_regular"
                                                android:text="Total" />

                                        </LinearLayout>

                                        <LinearLayout
                                            android:layout_marginStart="10dp"
                                            android:layout_gravity="center"
                                            android:gravity="start"
                                            android:layout_width="wrap_content"
                                            android:layout_height="wrap_content"
                                            android:orientation="horizontal">

                                            <View
                                                android:layout_gravity="center"
                                                android:layout_width="10dp"
                                                android:layout_height="10dp"
                                                android:background="@color/colorOrange" />

                                            <TextView
                                                android:textSize="12sp"
                                                android:layout_marginStart="5dp"
                                                android:layout_width="wrap_content"
                                                android:layout_height="wrap_content"
                                                android:fontFamily="@font/montserrat_regular"
                                                android:text="Reservados" />

                                        </LinearLayout>

                                    </LinearLayout>

                                    <LinearLayout
                                        android:gravity="center"
                                        android:orientation="horizontal"
                                        android:layout_width="match_parent"
                                        android:layout_height="wrap_content">

                                        <LinearLayout
                                            android:layout_marginStart="10dp"
                                            android:layout_gravity="center"
                                            android:gravity="start"
                                            android:layout_width="wrap_content"
                                            android:layout_height="wrap_content"
                                            android:orientation="horizontal">

                                            <View
                                                android:layout_gravity="center"
                                                android:layout_width="10dp"
                                                android:layout_height="10dp"
                                                android:background="@color/colorGreen" />

                                            <TextView
                                                android:textSize="12sp"
                                                android:layout_marginStart="5dp"
                                                android:layout_width="wrap_content"
                                                android:layout_height="wrap_content"
                                                android:fontFamily="@font/montserrat_regular"
                                                android:text="Retirados" />

                                        </LinearLayout>

                                        <LinearLayout
                                            android:layout_marginStart="10dp"
                                            android:layout_gravity="center"
                                            android:gravity="start"
                                            android:layout_width="wrap_content"
                                            android:layout_height="wrap_content"
                                            android:orientation="horizontal">

                                            <View
                                                android:layout_gravity="center"
                                                android:layout_width="10dp"
                                                android:layout_height="10dp"
                                                android:background="@color/colorRed" />

                                            <TextView
                                                android:textSize="12sp"
                                                android:layout_marginStart="5dp"
                                                android:layout_width="wrap_content"
                                                android:layout_height="wrap_content"
                                                android:fontFamily="@font/montserrat_regular"
                                                android:text="Cancelados" />

                                        </LinearLayout>

                                        <LinearLayout
                                            android:layout_marginStart="10dp"
                                            android:layout_gravity="center"
                                            android:gravity="start"
                                            android:layout_width="wrap_content"
                                            android:layout_height="wrap_content"
                                            android:orientation="horizontal">

                                            <View
                                                android:layout_gravity="center"
                                                android:layout_width="10dp"
                                                android:layout_height="10dp"
                                                android:background="@color/colorPink" />

                                            <TextView
                                                android:textSize="12sp"
                                                android:layout_marginStart="5dp"
                                                android:layout_width="wrap_content"
                                                android:layout_height="wrap_content"
                                                android:fontFamily="@font/montserrat_regular"
                                                android:text="No Retirados" />

                                        </LinearLayout>

                                    </LinearLayout>


                                </LinearLayout>


                            </LinearLayout>



                        </LinearLayout>

                    </androidx.cardview.widget.CardView>

                </LinearLayout>

                <LinearLayout
                    android:layout_marginTop="10dp"
                    android:orientation="vertical"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">

                    <androidx.cardview.widget.CardView
                        style="@style/CardView"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_margin="3dp"
                        app:cardCornerRadius="10dp">

                        <LinearLayout
                            android:orientation="vertical"
                            android:gravity="center"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content">

                            <TextView
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:text="RESERVAS POR FACULTAD"
                                android:gravity="center"
                                android:background="@color/colorAccent"
                                android:textColor="@color/colorWhite"
                                android:padding="5dp"
                                android:textStyle="bold"
                                android:fontFamily="@font/montserrat_black"
                                android:textSize="20sp"/>

                            <LinearLayout
                                android:id="@+id/cardPorFacultad"
                                android:orientation="vertical"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content">

                                <com.github.mikephil.charting.charts.PieChart
                                    android:id="@+id/pieFacultad"
                                    android:layout_width="match_parent"
                                    android:layout_marginBottom="10dp"
                                    android:layout_height="300dp">
                                </com.github.mikephil.charting.charts.PieChart>

                                <LinearLayout
                                    android:gravity="center"
                                    android:layout_gravity="center"
                                    android:orientation="vertical"
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content">

                                    <LinearLayout
                                        android:layout_marginBottom="10dp"
                                        android:layout_marginStart="10dp"
                                        android:gravity="start"
                                        android:orientation="horizontal"
                                        android:layout_width="match_parent"
                                        android:layout_height="wrap_content">

                                        <LinearLayout
                                            android:layout_gravity="center"
                                            android:gravity="start"
                                            android:layout_width="wrap_content"
                                            android:layout_height="wrap_content"
                                            android:orientation="horizontal">

                                            <View
                                                android:layout_gravity="center"
                                                android:layout_width="10dp"
                                                android:layout_height="10dp"
                                                android:background="@color/colorRed" />

                                            <TextView
                                                android:id="@+id/txtTotalFaya"
                                                android:textSize="12sp"
                                                android:layout_width="wrap_content"
                                                android:layout_height="wrap_content"
                                                android:layout_marginStart="5dp"
                                                android:fontFamily="@font/montserrat_regular"
                                                android:text="100" />

                                        </LinearLayout>

                                        <LinearLayout
                                            android:layout_marginStart="10dp"
                                            android:layout_gravity="center"
                                            android:gravity="start"
                                            android:layout_width="wrap_content"
                                            android:layout_height="wrap_content"
                                            android:orientation="horizontal">

                                            <View
                                                android:layout_gravity="center"
                                                android:layout_width="10dp"
                                                android:layout_height="10dp"
                                                android:background="@color/colorFCEyT" />

                                            <TextView
                                                android:id="@+id/txtTotalFCeT"
                                                android:textSize="12sp"
                                                android:layout_marginStart="5dp"
                                                android:layout_width="wrap_content"
                                                android:layout_height="wrap_content"
                                                android:fontFamily="@font/montserrat_regular"
                                                android:text="100" />

                                        </LinearLayout>

                                        <LinearLayout
                                            android:layout_marginStart="10dp"
                                            android:layout_gravity="center"
                                            android:gravity="start"
                                            android:layout_width="wrap_content"
                                            android:layout_height="wrap_content"
                                            android:orientation="horizontal">

                                            <View
                                                android:layout_gravity="center"
                                                android:layout_width="10dp"
                                                android:layout_height="10dp"
                                                android:background="@color/colorGreen" />

                                            <TextView
                                                android:id="@+id/txtTotalFCF"
                                                android:textSize="12sp"
                                                android:layout_marginStart="5dp"
                                                android:layout_width="wrap_content"
                                                android:layout_height="wrap_content"
                                                android:fontFamily="@font/montserrat_regular"
                                                android:text="100" />

                                        </LinearLayout>

                                        <LinearLayout
                                            android:layout_marginStart="10dp"
                                            android:layout_gravity="center"
                                            android:gravity="start"
                                            android:layout_width="wrap_content"
                                            android:layout_height="wrap_content"
                                            android:orientation="horizontal">

                                            <View
                                                android:layout_gravity="center"
                                                android:layout_width="10dp"
                                                android:layout_height="10dp"
                                                android:background="@color/colorLightBlue" />

                                            <TextView
                                                android:id="@+id/txtTotalFCM"
                                                android:textSize="12sp"
                                                android:layout_marginStart="5dp"
                                                android:layout_width="wrap_content"
                                                android:layout_height="wrap_content"
                                                android:fontFamily="@font/montserrat_regular"
                                                android:text="100" />

                                        </LinearLayout>

                                        <LinearLayout
                                            android:layout_marginStart="10dp"
                                            android:layout_gravity="center"
                                            android:gravity="start"
                                            android:layout_width="wrap_content"
                                            android:layout_height="wrap_content"
                                            android:orientation="horizontal">

                                            <View
                                                android:layout_gravity="center"
                                                android:layout_width="10dp"
                                                android:layout_height="10dp"
                                                android:background="@color/colorYellow" />

                                            <TextView
                                                android:id="@+id/txtTotalFHS"
                                                android:textSize="12sp"
                                                android:layout_marginStart="5dp"
                                                android:layout_width="wrap_content"
                                                android:layout_height="wrap_content"
                                                android:fontFamily="@font/montserrat_regular"
                                                android:text="100" />

                                        </LinearLayout>

                                    </LinearLayout>

                                </LinearLayout>

                            </LinearLayout>

                        </LinearLayout>

                    </androidx.cardview.widget.CardView>

                </LinearLayout>

            </LinearLayout>

            <Button
                android:id="@+id/btnPdf"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@drawable/button_border"
                android:layout_marginLeft="20dp"
                android:layout_marginRight="20dp"
                android:layout_marginTop="30dp"
                android:layout_marginBottom="30dp"
                android:layout_centerInParent="true"
                android:textSize="18sp"
                android:textColor="@android:color/white"
                android:text="GENERAR PDF"
                android:fontFamily="@font/montserrat_black"/>

        </LinearLayout>

    </LinearLayout>

</androidx.core.widget.NestedScrollView>