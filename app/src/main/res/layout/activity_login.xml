<?xml version="1.0" encoding="utf-8"?>
<androidx.core.widget.NestedScrollView
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@mipmap/img_unse2">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_margin="20dp"
        android:orientation="vertical">

        <TextView
            android:id="@+id/txtWelcome"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="¡Buenas noches!"
            android:textColor="@color/whiteTextColor"
            android:textSize="35sp"
            android:gravity="center"
            android:fontFamily="@font/montserrat_black"/>

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Bienvenido/a a la aplicación del Comerdor Universitario."
            android:textSize="18sp"
            android:layout_margin="10dp"
            android:textColor="@color/whiteTextColor"
            android:gravity="center"
            android:layout_marginTop="10sp"
            android:fontFamily="@font/montserrat_regular"/>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:padding="10dp">

            <ImageView
                android:layout_width="280dp"
                android:layout_height="160dp"
                android:layout_gravity="center"
                android:src="@drawable/ic_logo_bienestar_01" />

            <EditText
                android:id="@+id/edtUser"
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:layout_margin="5dp"
                android:background="@drawable/edit_text_logreg"
                android:hint="DNI"
                android:textSize="16sp"
                android:inputType="number"
                android:padding="10dp"
                android:fontFamily="@font/montserrat_regular"/>

            <EditText
                android:id="@+id/edtPass"
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:layout_margin="5dp"
                android:background="@drawable/edit_text_logreg"
                android:hint="Contraseña"
                android:textSize="16sp"
                android:inputType="textPassword"
                android:padding="10dp"
                android:fontFamily="@font/montserrat_regular"/>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:gravity="center"
                android:layout_marginTop="20dp">

                <Button
                    android:id="@+id/sesionOn"
                    android:layout_width="250dp"
                    android:layout_height="wrap_content"
                    android:textSize="18sp"
                    android:text="Iniciar sesión"
                    android:textColor="@color/whiteTextColor"
                    android:backgroundTint="@color/colorPrimaryDark"
                    android:background="@drawable/corners_rounded_green"
                    android:layout_margin="5dp"
                    android:fontFamily="@font/montserrat_black"/>

                <TextView
                    android:visibility="gone"
                    android:id="@+id/txtPassMissed"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="center"
                    android:textSize="16sp"
                    android:text="¿Olvidaste tu contraseña?"
                    android:textColor="@color/whiteTextColor"
                    android:layout_marginTop="5dp"
                    android:padding="10dp"
                    android:onClick="onClick"
                    android:clickable="true"
                    android:focusable="true"
                    android:fontFamily="@font/montserrat_regular"/>

            </LinearLayout>

        </LinearLayout>

        <ImageView
            android:layout_width="230dp"
            android:layout_height="100dp"
            android:layout_gravity="bottom|center"
            android:tint="@color/whiteTextColor"
            android:src="@drawable/logo_unse"/>

    </LinearLayout>

</androidx.core.widget.NestedScrollView>
