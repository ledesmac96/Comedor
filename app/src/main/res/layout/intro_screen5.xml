<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    android:id="@+id/one"
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/bienestarAmarillo"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="100dp"
        android:orientation="vertical">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="VAMOS A CUIDARNOS"
            android:gravity="center"
            android:textSize="30sp"
            android:layout_marginTop="40dp"
            android:textColor="@color/whiteTextColor"
            android:fontFamily="@font/montserrat_black"/>

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="540dp"
        android:orientation="vertical"
        android:layout_gravity="center"
        android:gravity="center"
        android:layout_margin="20dp"
        android:background="@drawable/corners_rounded_green">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="RECORDÁ TOMAR LAS MEDIDAS NECESARIAS CONTRA EL COVID-19"
            android:textColor="@android:color/black"
            android:textSize="24dp"
            android:gravity="center"
            android:textStyle="bold"
            android:layout_below="@+id/imageView"
            android:layout_centerHorizontal="true"
            android:layout_margin="20dp"
            android:fontFamily="@font/montserrat_black"/>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:weightSum="1"
            android:orientation="horizontal">

            <ImageView
                android:layout_width="0dp"
                android:layout_height="70dp"
                android:layout_weight="0.25"
                android:layout_margin="10dp"
                android:src="@drawable/ic_face_mask"/>

            <ImageView
                android:layout_width="0dp"
                android:layout_height="70dp"
                android:layout_weight="0.25"
                android:layout_margin="10dp"
                android:src="@drawable/ic_social_distancing"/>

            <ImageView
                android:layout_width="0dp"
                android:layout_height="70dp"
                android:layout_weight="0.25"
                android:layout_margin="10dp"
                android:src="@drawable/ic_disinfect"/>

            <ImageView
                android:layout_width="0dp"
                android:layout_height="70dp"
                android:layout_weight="0.25"
                android:layout_margin="10dp"
                android:src="@drawable/ic_washing_hands"/>

        </LinearLayout>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Usar siempre el tapabocas sobre mentón y nariz. El distanciamiento a 2m de cada persona. Desinfectá tú celular con frecuencia y no olvides lavar bien tus manos con jabón."
            android:textColor="@android:color/black"
            android:textSize="20dp"
            android:gravity="center"
            android:textStyle="bold"
            android:layout_below="@+id/imageView"
            android:layout_centerHorizontal="true"
            android:layout_margin="20dp"
            android:fontFamily="@font/montserrat_regular"/>

        <ImageView
            android:layout_width="300dp"
            android:layout_height="100dp"
            android:layout_gravity="center|bottom"
            android:layout_marginTop="10dp"
            android:src="@drawable/ic_logo_bienestar_01"/>

    </LinearLayout>

</LinearLayout>